{{ 'slider-product-custom.css' | asset_url | stylesheet_tag }}

{% style %}
  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 15px;
    background-color: #f5f5f5;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .slider {
    overflow: hidden;
    width: 100%;
    height: 320px;
    position: relative;
    z-index: 1;
  }

  .slider-item {
    height: 100%;
    text-align: justify;
    border-radius: 10px;
    position: absolute;
    left: calc(50% - 200px);
    top: 0;
    transition: transform 0.5s
    , z-index 0.5s
    , opacity 0.5s
    , filter 0.5s;
    cursor: pointer;
    z-index: 1;
  }

  .slider-prev,
  .slider-next {
    position: absolute;
    top: 60%;
    transform: translateY(-50%);
    color: var(--color-blue-light);
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    z-index: 10;
    font-size: 42px;
    background-color: transparent;
  }

  .slider-prev {
    left: 15px;
  }

  .slider-next {
    right: 15px;
  }

  .hidden {
    display: none;
  }
{% endstyle %}

<div class="container">
  <h1 class="container-title">The car is like a second
    <span>home</span>
  </h1>
  <p>Drive into excellence with NOBEL CAR. Explore our premium car accessories â€“ from luxe interior care to smart organizers and refreshing air fresheners. Elevate your journey today.</p>

  <div class="slider">
    {% for item in collections %}
      {% if item.image != blank %}
        <div class="slider-item hidden">
          <a href="{{ item.url }}">
            <img
              src="{{ item.featured_image | img_url: 'medium' }}"
              alt="{{ item.title }}"
              width="400"
              height="350">
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <button class="slider-prev">&lt;</button>
  <button class="slider-next">&gt;</button>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
      const items = Array.from(document.querySelectorAll('.slider-item'));

      if (items.length === 0) {
        console.error('No slider items found');
        return;
      }

      const itemWidth = items[0].offsetWidth;
      const prev = document.querySelector('.slider-prev');
      const next = document.querySelector('.slider-next');
      let active = Math.floor(items.length / 2);

    function loadShow() {
      let contIndexZ = 0;

      items[active].classList.remove('hidden');
      items[active].style.transform = 'none';
      items[active].style.zIndex = 1;

      for (let i = active - 1; i >= 0; i--) {
        contIndexZ++;
        items[i].classList.remove('hidden');
        items[i].style.zIndex = -contIndexZ;
        items[i].style.transform = `translateX(${itemWidth - 320}px) perspective(16px) rotateY(1deg) scale(0.6)`;
      }

      for (let i = active + 1; i < items.length; i++) {
        contIndexZ++;
        items[i].classList.remove('hidden');
        items[i].style.zIndex = -contIndexZ;
        items[i].style.transform = `translateX(${itemWidth + 320}px) perspective(16px) rotateY(-1deg) scale(0.6)`;
      }
    }

    prev.addEventListener('click', function() {
      active = active === 0 ? items.length - 1 : active - 1;

      loadShow();
    });

      next.addEventListener('click', function() {
        active = active === items.length - 1 ? 0 : active + 1;

        loadShow();
      });

    loadShow();
  });
</script>

