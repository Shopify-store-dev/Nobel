{% comment %}
  This is the template for the "Image with Text Custom" section.
{% endcomment %}

{{ 'image-with-text-custom.css' | asset_url | stylesheet_tag }}

{% assign image_position = section.settings.image_position %}
{% assign image_size = section.settings.image_width %}
{% if image_size == 'small' %}
  {% assign image_width = '150px' %}
{% elsif image_size == 'medium' %}
  {% assign image_width = '300px' %}
{% elsif image_size == 'large' %}
  {% assign image_width = '450px' %}
{% elsif image_size == 'extra_large' %}
  {% assign image_width = '600px' %}
{% elsif image_size == 'full_width' %}
  {% assign image_width = '100%' %}
{% endif %}

<style>
  :root {
    --mobile-text-padding: {{ section.settings.mobile_text_padding }}px;
    --mobile-text-alignment: {{ section.settings.mobile_text_alignment }};
    --tablet-text-padding: {{ section.settings.tablet_text_padding }}px;
    --desktop-text-padding: {{ section.settings.desktop_text_padding }}px;
    --image-position: {{ image_position == 'left' ? 'row' : 'row-reverse' }};
  }
</style>

<section 
  class="image-with-text-custom {{ image_position }}" 
  style="padding-top: {{ section.settings.padding_top }}px; 
  padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  {% if section.settings.image %}
    <div class="image-container" style="margin: 0 20px 20px 0;">
      <img 
        src="{{ section.settings.image | img_url: 'master' }}" 
        alt="{{ section.settings.image.alt | escape }}" 
        width="{{ image_width }}" 
        height="auto" 
        style="width: {{ image_width }};"
      />
    </div>
  {% endif %}

  <div class="text-container" style="overflow: hidden; padding: {{ section.settings.text_padding }}px; text-align: {{ section.settings.text_alignment }};">
    {% for block in section.blocks %}
      <div class="text-block" style="font-size: {{ block.settings.font_size }}px; color: {{ block.settings.text_color }};">
        {{ block.settings.text }}
      </div>
    {% endfor %}
  </div>
</section>


{% schema %}
{
  "name": "Image with Text Custom",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_width",
      "label": "Image Width",
      "options": [
        { "value": "small", "label": "Small (200px)" },
        { "value": "medium", "label": "Medium (350px)" },
        { "value": "large", "label": "Large (550px)" },
        { "value": "extra_large", "label": "Extra Large (700px)" },
        { "value": "full_width", "label": "Full Width" }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "default": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "default": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "text_padding",
      "label": "Text Padding",
      "min": 0,
      "max": 50,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "mobile_text_padding",
      "label": "Mobile Text Padding",
      "min": 0,
      "max": 50,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "mobile_text_alignment",
      "label": "Mobile Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "tablet_text_padding",
      "label": "Tablet Text Padding",
      "min": 0,
      "max": 50,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "desktop_text_padding",
      "label": "Desktop Text Padding",
      "min": 0,
      "max": 50,
      "default": 0,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "range",
          "id": "font_size",
          "label": "Font Size",
          "min": 12,
          "max": 48,
          "default": 16,
          "unit": "px"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with Text Custom",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
